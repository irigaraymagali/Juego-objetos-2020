import personajes.*
import objetos.*
import wollok.game.*

describe"Modo carpincho"{
	test "Al colisionar con el yaguarete termina el juego"{
		carpincho.moverseA(game.center())
		yaguarete.moverseA(game.center())
		assert.equals(true,carpincho.perdiste())
	}
	test "El carpincho al colisionar con el mate se suman 50 puntos"{
		const mate = new Mate(posicion = game.center())
		carpincho.moverseA(mate.posicion())
		assert.equals(50,puntos.puntos())
	}
}

describe"Modo cazar"{
	test "Al colisionar con el carpincho termina el juego"{
		carpincho.moverseA(game.center()) 
		yaguarete.moverseA(game.center())
		assert.equals(true,carpincho.perdiste())
	}
}
